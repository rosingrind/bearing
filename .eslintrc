{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "plugin:react/recommended",
    "plugin:mocha/recommended",
    "airbnb",
    "airbnb-typescript",
    "airbnb/hooks"
  ],
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "plugins": ["react", "mocha", "istanbul"],
  "rules": {
    "istanbul/no-ignore-file": "error",
    "istanbul/prefer-ignore-reason": "error"
  }
}
