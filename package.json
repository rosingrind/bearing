{
  "name": "bearing",
  "version": "0.5.4",
  "description": "A lightweight customizable \"animation frame\"-bound carousel",
  "main": "dist/index.js",
  "scripts": {
    "build": "rollup -c --configPlugin typescript",
    "format": "prettier --write 'src/**/*.ts[x]'",
    "format-check": "prettier --check 'src/**/*.ts[x]'",
    "lint": "eslint src/**/*.ts[x]",
    "start": "rollup -c -w --configPlugin typescript",
    "test": "mocha 'test/**'",
    "coverage": "nyc yarn run test",
    "all": "yarn run build && yarn run format-check && yarn run lint && yarn test"
  },
  "peerDependencies": {
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^11.0.0",
    "@types/chai": "^4.3.4",
    "@types/classnames": "^2.3.1",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.14.0",
    "@types/react": "^16.9.49",
    "@types/react-dom": "^16.9.8",
    "@typescript-eslint/eslint-plugin": "^5.52.0",
    "@typescript-eslint/parser": "^5.52.0",
    "autoprefixer": "^10.4.13",
    "chai": "^4.3.7",
    "eslint": "^8.34.0",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "postcss": "^8.4.21",
    "prettier": "^2.8.4",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "rollup": "^3.17.1",
    "rollup-plugin-postcss-modules": "^2.1.1",
    "rollup-plugin-sass": "^1.12.17",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.1",
    "tslib": "^2.5.0",
    "typescript": "^4.9.5"
  },
  "files": [
    "dist",
    "easing"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rosingrind/bearing.git"
  },
  "keywords": [
    "carousel",
    "gallery",
    "slideshow",
    "lightweight",
    "slider",
    "react",
    "typescript"
  ],
  "author": "Adam Barton <108860307+rosingrind@users.noreply.github.com>",
