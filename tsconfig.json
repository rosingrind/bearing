{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@bearing": ["src/bearing"],
      "@bearing/*": ["src/bearing/*"],
      "@easing": ["src/easing"],
      "@easing/*": ["src/easing/*"]
    },
    "typeRoots": ["node_modules/@types", "typings"],
    "jsx": "react",
    "moduleResolution": "node",
    "module": "es2020",
    "target": "es2020",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "exclude": ["node_modules", "dist", "easing", "coverage"]
}
